<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
</head>
<body class="container">
    <h1>{{title}}</h1>
    <h2>Manage your goals</h2>
    <form method="post" action="/goals">
        <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control" id="category" name="category" required>
                <option value="">Select a category</option>
                <option value="nutrition">Nutrition</option>
                <option value="fitness">Fitness</option>
                <option value="healthy_lifestyle">Healthy Lifestyle</option>
            </select>
        </div>
        <div class="form-group">
            <label for="description">Goal Description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Enter your goal" required>
        </div>
        <div class="form-group">
            <label for="dueDate">Due Date</label>
            <input type="date" class="form-control" id="dueDate" name="dueDate" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Goal</button>
    </form>
    <hr>
    <h3>Your goals:</h3>
    {{#goals}}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{category}}</h5>
                <p class="card-text">{{description}}</p>
                <p class="card-text"><small class="text-muted">Due by: {{dueDate}}</small></p>
            </div>
        </div>
    {{/goals}}
</body>
</html>
